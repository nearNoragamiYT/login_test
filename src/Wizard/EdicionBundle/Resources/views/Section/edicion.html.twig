                <div class="row">
                    <div class="input-field col s12 m6">
                        <select id="idEvento" name="idEvento" class="browser-default">
                            {% for evento in content['eventos'] %}
                                <option value="{{ evento['idEvento'] }}">{{ evento['Evento_ES'] }}</option>

{% extends 'WizardWizardBundle:Wizard:showWizard.html.twig' %}

{% set ruta_asset_section = 'resources/Wizard/EdicionBundle/' %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset(ruta_asset_section ~ 'css/edicion.css') }}">
{% endblock %}

{% block content_step %}
    <section id="wizard-edicion">
        <h5 class="wizard-title-step">{{ content['section_text']['sas_tituloPaso6'] }}</h5>
        <div class="ediciones" {% if content['ediciones']|length == 0 %}style="display: none;"{% endif %}>
            {% for evento in content['eventos'] %}
                <div class="row">
                    <div class="col s12"><label class="nombre-evento">{{ evento['Evento_ES'] }}</label></div>
                </div>
                <div class="row event-section">
                    {% for edicion in content['ediciones'] if edicion['idEvento'] == evento['idEvento'] %}
                        <div class="col s12 m6">
                            <div class="card">
                                <div class="card-content">
                                    <div class="fixed-action-btn horizontal click-to-toggle right">
                                        <a class="btn-floating waves-effect transparent z-depth-0">
                                            <i class="material-icons black-text ">more_vert</i>
                                        </a>
                                        <ul>
                                            <li>
                                                <a class="btn-floating blue white-text">
                                                    <i class="material-icons edit" 
                                                       id-edicion="{{ edicion['idEdicion'] }}"
                                                       title="{{ content['general_text']['sas_editar'] }}"
                                                       >edit</i>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="btn-floating red white-text">
                                                    <i class="material-icons delete" 
                                                       id-edicion="{{ edicion['idEdicion'] }}"
                                                       title="{{ content['general_text']['sas_eliminar'] }}"
                                                       >delete_forever</i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <span class="card-title"><h5>{{ edicion['Edicion_ES'] }}</h5></span>
                                    <p> {{ edicion['FechaInicio']|date("d/m/Y") }} - {{ edicion['FechaInicio']|date("d/m/Y") }}</p>
                                    <p class="secondary-info grey-text justify-align">{{ edicion['Descripcion'] }}</p>
                                    <p class="bottom-info">
                                        {% if edicion['Edicion_ES'] != "" %}<img src="{{ asset('images/idioma/es.png') }}" alt="es" class="img-lang-available">{% endif %}
                                        {% if edicion['Edicion_EN'] != "" %}<img src="{{ asset('images/idioma/en.png') }}" alt="en" class="img-lang-available">{% endif %}
                                        {% if edicion['Edicion_FR'] != "" %}<img src="{{ asset('images/idioma/fr.png') }}" alt="fr" class="img-lang-available">{% endif %}
                                        {% if edicion['Edicion_PT'] != "" %}<img src="{{ asset('images/idioma/pt.png') }}" alt="pt" class="img-lang-available">{% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col s12">{{ content['section_text']['sas_sinEdicion'] }}</div>
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="row event-section center-align">
                <div class="col s12">
                    <button type="button" class="btn waves-effect waves-light green btn-new-edi">{{ content['section_text']['sas_nuevaEdicion'] }} <i class="material-icons left">add</i></button>
                </div>
            </div>
            <div class="nav-buttons">
                <a href="{{ path('wizard_evento') }}" class="btn-link waves-effect btn-flat left show-loader-top">{{ content['general_text']['sas_atras'] }}</a>
                <a href="{{ path('wizard_producto') }}" class="btn waves-effect waves-light green show-loader-top">{{ content['general_text']['sas_siguiente'] }}</a>
            </div>
        </div>
        <div class="frm-edicion" {% if content['ediciones']|length > 0 %}style="display: none;"{% endif %}>
            <form id="frm-edicion" action="{{ path('wizard_edicion') }}" method="post" enctype="multipart/form-data">
                <input type="hidden" 
                       id="idEdicion" 
                       name="idEdicion"
                       >
                <input type="hidden" 
                       id="idComiteOrganizador" 
                       name="idComiteOrganizador"

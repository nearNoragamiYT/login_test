{% extends '::base_dashboard.html.twig' %}
{% set ruta_asset = 'resources/Visitante/ComprasTorneoBundle/' %}

{% block stylesheets %}
    {{ parent() }}    
    <link rel="stylesheet" media="screen" href="{{ asset('js/dynamicTable/css/datatables.responsive.css') }}"/>
    <link rel="stylesheet" media="screen" href="{{ asset('js/dynamicTable/css/dynamic_table.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('css/dataTables.materialize.css') }}" media="screen,projection"/>    
    <link type="text/css" rel="stylesheet" href="{{ asset(ruta_asset ~ 'css/compras.css') }}">
{% endblock %}

{% block content %}
    <div id="compras" class="container">
        <div id="slide-list-div" style="margin-top: 20px">
            <div class="row">
                <div id="cover-ComprasTorneo-table" class="col-xs-12"></div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var lang = {{ content['lang']|json_encode()|raw }},
                url_lang = "{{asset('js/dataTablesLang/' ~ content['lang'] ~ '.json')}}",
                Visitante_table_columns = {{ content['Visitante_table_columns']|json_encode()|raw }},
                Visitante_table_column_categories = {{ content['Visitante_table_column_categories']|json_encode()|raw }};

        var url_compras_torneo_get_to_dt = "{{ path("compras_torneo_get_to_datatable") }}",
                url_compras_torneo_get_to_dt_filtro = "{{ path("compras_torneo_get_to_datatable_filtro") }}",
                url_compras_torneo_export_data = "{{ path("compras_torneo_export_data") }}",
                url_set_session = "{{ path("compras_torneo_set_session") }}",
                url_get_session = "{{ path("compras_torneo_get_session") }}",
                url_data_compra = "{{ path('compras_resumen') }}",
                img_excel = "{{ asset("images/excel.png") }}";
        {#TipoCambio={{ content['TipoCambio']|json_encode()|raw}};#}
            url_update_tasaCambio = "{{ path("compras_update_tasa_cambio") }}";
    </script>

    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/datatables.responsive.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/jquery.dataTables.columnFilter.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/selectFilter.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/jquery.dataTables.customFilter.js') }}"></script>         
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/datatables.js') }}"></script>   
    <script type="text/javascript" src="{{ asset('js/dynamicTable/js/dynamic_table.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/datepickerLang/' ~ content['lang'] ~ '.js') }}"></script>

    <script type="text/javascript" src="{{ asset(ruta_asset ~ 'js/compras.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.validate.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/additional-methods.js') }}"></script>

{% endblock %}
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/paragraph_format.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/align.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/lists.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/quote.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/link.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/table.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/fullscreen.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/code_view.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/char_counter.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/languages/' ~ lang ~ '.js') }}"></script>

{% extends '::base_dashboard.html.twig' %}
{% set ruta_asset_editor = 'resources/ShowDashboard/ED/Formas/EditorFormaBundle/' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Include Font Awesome. -->
    <link href="{{ asset(ruta_asset_editor ~ 'css/froala/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />

    <!-- Include Editor style. -->
    <link href="{{ asset(ruta_asset_editor ~ 'css/froala/froala_editor.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset(ruta_asset_editor ~ 'css/froala/froala_style.min.css') }}" rel="stylesheet" type="text/css" />

    <!-- Include Code Mirror style -->
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/codemirror.min.css') }}">

    <!-- Include Editor Plugins style. -->
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/plugins/colors.css') }}">
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/plugins/table.css') }}">
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/plugins/code_view.css') }}">
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/plugins/fullscreen.css') }}">
    <link rel="stylesheet" href="{{ asset(ruta_asset_editor ~ 'css/froala/plugins/char_counter.css') }}">
{% endblock %}

{% block javascripts %}
    {% set lang = content['lang'] is defined ? content['lang'] : lang %}
    <!-- Include jQuery. -->
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/jquery-1.11.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
    {% include ':js:init.js.twig' %}
    <script type="text/javascript" src="{{ asset('js/jquery.validate.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/additional-methods.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.formatter.min.js') }}"></script>

    <script>
        var url_save_html = "{{ path('show_dashboard_ae_administracion_guardar_html', { 'lang': lang }) }}";
        var url_save_image = "{{ path('show_dashboard_ae_administracion_guardar_imagen', { 'lang': lang }) }}";
    </script>

    <!-- Include JS files. -->
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/froala_editor.min.js') }}"></script>

    <!-- Include Code Mirror. -->
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/codemirror.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/xml.min.js') }}"></script>

    <!-- Include Plugins. -->
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/font_family.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset(ruta_asset_editor ~ 'js/froala/plugins/font_size.min.js') }}"></script>

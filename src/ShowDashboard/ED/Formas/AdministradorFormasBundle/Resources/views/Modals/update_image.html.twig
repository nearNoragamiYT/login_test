{% extends ":complementos:modal_base.html.twig" %}
{% set settings = { "class": "", "id": "modal-update-image" } %}
{% block title %}{{content['textosGenerales']['lb_actualizarImagen']}}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="bs-callout bs-callout-info">{{content['textosGenerales']['lb_NotaImagen']|raw}}</div>
        </div>
        <div class="col-xs-offset-2 col-xs-8   col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
            <div id="tab-img-demo" class="thumbnail" >
                <img id="img-demo" src="" data-holder-rendered="true" style="height: 150px; width: 60%; display: block; margin-top: 8px;">
                <div class="caption">
                    <div class="caption-title">
                        <h3 id="section-img-demo" ></h3>
                    </div>
                </div>
            </div>
        </div>
        <form id="form-update-image" method="POST" enctype="multipart/form-data">
            <div class="text-right">
                <input type="file" name="Imagen" id="Imagen" style="display: none;" accept="image/jpg, image/jpeg, image/png">
            </div>
            <label class=" col-xs-12 text-right invalid"></label>
        </form>
    </div>
    <div id="bar-section" class="progress">
        <div class="progress-bar progress-bar-success progress-bar-striped active">0%</div>
    </div>
{% endblock%}
{% block buttons %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ content['textosGenerales']['bt_cerrar'] }}</button>
    <span id="update-image" class="btn btn-primary">{{content['textosGenerales']['lb_ImagenSeccion']}}</span>
{% endblock%}